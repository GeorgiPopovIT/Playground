<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model ="clr-namespace:BelotScorer.Models"
             BackgroundImageSource="table_background.jpg"
             x:Class="BelotScorer.MainPage">

    <Shell.TitleView>
        <Grid>
            <Label FontSize="Large" 
                   TextColor="White" 
                   Text="Belot Scorer" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <Grid>
        <ScrollView>
            <VerticalStackLayout
            Spacing="20"
            Padding="20">

                <Button FontSize="Large"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    TextColor="White"
					Background="Blue"
                    BackgroundColor="Blue"
                    Text="Нова игра"
                    CornerRadius="15"
                    Command="{Binding }"
                    Clicked="GoToCreateGame"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
