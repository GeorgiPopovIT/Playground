<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:services="clr-namespace:BelotScorer.Services"
             BackgroundImageSource="table_background.jpg"
             x:Class="BelotScorer.MainPage">

    <Shell.TitleView>
        <Grid Padding="{OnIdiom Phone=8, Tablet=10, Default=10}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{OnIdiom Phone=70, Default=Auto}" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="{OnIdiom Phone=70, Default=Auto}" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=CurrentCulture.TwoLetterISOLanguageName, StringFormat='{0}'}"
                    FontSize="16"
                    TextColor="White"
                    BackgroundColor="#8B4513"
                    CornerRadius="15"
                    Padding="12,5"
                    Clicked="OnLanguageButtonClicked"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Margin="5,0,0,0">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" 
                                 Binding="{Binding Source={x:Static services:LocalizationService.Instance}, Path=CurrentCulture.TwoLetterISOLanguageName}" 
                                 Value="bg">
                        <Setter Property="Text" Value="EN" />
                    </DataTrigger>
                    <DataTrigger TargetType="Button" 
                                 Binding="{Binding Source={x:Static services:LocalizationService.Instance}, Path=CurrentCulture.TwoLetterISOLanguageName}" 
                                 Value="en">
                        <Setter Property="Text" Value="БГ" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Label Grid.Column="1"
                   FontSize="{OnIdiom Phone=22, Tablet=28, Default=28}" 
                   FontAttributes="Bold"
                   TextColor="#FFD700" 
                   Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[AppTitle]}"
                   HorizontalOptions="Center" 
                   VerticalOptions="Center">
                <Label.Shadow>
                    <Shadow Brush="Black"
                            Offset="2,2"
                            Opacity="0.8"
                            Radius="4" />
                </Label.Shadow>
            </Label>
        </Grid>
    </Shell.TitleView>

    <Grid>
        <!-- Semi-transparent overlay for better readability -->
        <BoxView Color="Black" Opacity="0.3"/>
        
        <ScrollView>
            <Grid VerticalOptions="Center" Padding="{OnIdiom Phone=15, Tablet=30, Default=30}">
                <VerticalStackLayout Spacing="{OnIdiom Phone=20, Tablet=30, Default=30}" VerticalOptions="Center">
                    
                    <!-- Welcome Card -->
                    <Border BackgroundColor="#F5F5DC"
                            StrokeShape="RoundRectangle 30"
                            Stroke="#D4AF37"
                            StrokeThickness="3"
                            Padding="{OnIdiom Phone=20, Tablet=30, Default=30}"
                            Margin="{OnIdiom Phone='0,10,0,0', Default='0,20,0,0'}">
                        <Border.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0,8"
                                    Opacity="0.6"
                                    Radius="20" />
                        </Border.Shadow>
                        
                        <VerticalStackLayout Spacing="{OnIdiom Phone=15, Default=20}">
                            <!-- App Logo/Icon -->
                            <Label Text="♠️ ♥️ ♣️ ♦️"
                                   FontSize="{OnIdiom Phone=40, Tablet=48, Default=48}"
                                   HorizontalOptions="Center"
                                   TextColor="#8B4513"/>
                            
                            <!-- Welcome Title -->
                            <Label Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[Welcome]}"
                                   FontSize="{OnIdiom Phone=26, Tablet=32, Default=32}"
                                   FontAttributes="Bold"
                                   TextColor="#8B4513"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>

                            <!-- Subtitle -->
                            <Label Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[StartNewGame]}"
                                   FontSize="{OnIdiom Phone=14, Default=16}"
                                   TextColor="#654321"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   Margin="0,0,0,10"/>
                            
                            <!-- New Game Button with gradient effect -->
                            <Border StrokeShape="RoundRectangle 25"
                                    Stroke="#D4AF37"
                                    StrokeThickness="2"
                                    Padding="0"
                                    HeightRequest="{OnIdiom Phone=60, Default=70}">
                                <Border.Shadow>
                                    <Shadow Brush="Black"
                                            Offset="0,6"
                                            Opacity="0.5"
                                            Radius="15" />
                                </Border.Shadow>
                                
                                <Button Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[NewGameButton]}"
                                        FontSize="{OnIdiom Phone=18, Tablet=22, Default=22}"
                                        FontAttributes="Bold"
                                        TextColor="White"
                                        BackgroundColor="#8B4513"
                                        CornerRadius="23"
                                        HeightRequest="{OnIdiom Phone=60, Default=70}"
                                        Clicked="GoToCreateGame">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding IsPressed, Source={RelativeSource Self}}" Value="True">
                                            <Setter Property="Scale" Value="0.95" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Border>
                            
                            <!-- Info Section -->
                            <Frame BackgroundColor="White"
                                   BorderColor="#D4AF37"
                                   CornerRadius="15"
                                   Padding="{OnIdiom Phone=12, Default=15}"
                                   HasShadow="True"
                                   Margin="{OnIdiom Phone='0,8,0,0', Default='0,10,0,0'}">
                                <VerticalStackLayout Spacing="{OnIdiom Phone=6, Default=8}">
                                    <Label Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[HowToPlay]}"
                                           FontSize="{OnIdiom Phone=15, Default=16}"
                                           FontAttributes="Bold"
                                           TextColor="#8B4513"/>
                                    <Label Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[HowToPlayStep1]}"
                                           FontSize="{OnIdiom Phone=13, Default=14}"
                                           TextColor="#654321"/>
                                    <Label Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[HowToPlayStep2]}"
                                           FontSize="{OnIdiom Phone=13, Default=14}"
                                           TextColor="#654321"/>
                                    <Label Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[HowToPlayStep3]}"
                                           FontSize="{OnIdiom Phone=13, Default=14}"
                                           TextColor="#654321"/>
                                </VerticalStackLayout>
                            </Frame>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Footer -->
                    <Label Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[EnjoyGame]}"
                           FontSize="14"
                           TextColor="White"
                           FontAttributes="Italic"
                           HorizontalOptions="Center"
                           Margin="0,10,0,20">
                        <Label.Shadow>
                            <Shadow Brush="Black"
                                    Offset="1,1"
                                    Opacity="0.8"
                                    Radius="3" />
                        </Label.Shadow>
                    </Label>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
