<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel ="clr-namespace:BelotScorer.ViewModels"
             x:DataType="viewModel:GameViewModel"
             x:Class="BelotScorer.Pages.GamePage"
             Title="Игра"
             BackgroundImageSource="table_background.jpg">
    <RefreshView>
        <ScrollView>
            <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding Game.Team1Name}"
                       FontSize="Large" HorizontalOptions="CenterAndExpand"/>

                    <Label FontSize="Large" Text="-"/>
                    <Label  Text="{Binding Game.Team2Name}" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
                <ScrollView>
                    <!--<StackLayout Orientation="Horizontal">
               
            

        
                <CollectionView HorizontalOptions="StartAndExpand" ItemsSource="{Binding PointsTeam1}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label FontSize="Medium" Text="{Binding .}"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <CollectionView HorizontalOptions="EndAndExpand" ItemsSource="{Binding PointsTeam2}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label FontSize="Medium" Text="{Binding .}"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
          </StackLayout>-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ListView Grid.Column="0" ItemsSource="{Binding PointsTeam1}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextCell Text="{Binding .}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <ListView x:Name="t2Score"  Grid.Column="1" ItemsSource="{Binding PointsTeam2}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                            <TextCell Text="{Binding .}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <!--<CollectionView Margin="70" HorizontalOptions="End"  Grid.Column="0" VerticalOptions="CenterAndExpand"  ItemsSource="{Binding PointsTeam1}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                    <Label FontSize="Medium" Text="{Binding .}"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <CollectionView Margin="70" HorizontalOptions="EndAndExpand" Grid.Column="1" ItemsSource="{Binding PointsTeam2}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                    <Label FontSize="Medium" Text="{Binding .}"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>-->
                        </Grid>
                </ScrollView>
                <VerticalStackLayout VerticalOptions="EndAndExpand">
                    <StackLayout Orientation="Horizontal">
                        <StackLayout HorizontalOptions="Center">
                            <Label  Grid.Column="1" FontSize="Medium">Точки за отбор 1</Label>
                            <Entry Grid.Column="1" Text="{Binding Team1PointsToAdd}" x:Name="entry1"
                       TextChanged="Entry_TeamName_Changed" TextColor="Black"
                       Placeholder="Точки за отбор ..." MaxLength="4"
                       PlaceholderColor="Black"/>
                        </StackLayout>
                        <StackLayout HorizontalOptions="EndAndExpand">
                            <Label FontSize="Medium">Точки за отбор 2</Label>
                            <Entry Text="{Binding Team2PointsToAdd}" x:Name="entry2"
                       TextChanged="Entry_TeamName_Changed" TextColor="Black"
                       Placeholder="Точки за отбор ..." MaxLength="4"
                       PlaceholderColor="Black"/>
                        </StackLayout>
                    </StackLayout>
                    <Button  x:Name="btn_Create"
                    Margin="10" Padding="5" IsEnabled="False"
                    BackgroundColor="Grey" TextTransform="Uppercase"
                    Text="Въведи точки"
                    Clicked="Save_Points_Clicked"
                    Command="{Binding AddPointsToTeamsCommand}" />
                </VerticalStackLayout>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>