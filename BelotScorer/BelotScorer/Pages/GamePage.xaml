               VerticalOptions="Center" />
        <Label  FontSize="Large" Grid.Column="1"
               Text="{Binding Game.Team2Name}"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <!--<BoxView Grid.Row="1"
                 Color="Teal" />-->
        <Label Grid.Row="1"
               Text="Row 1, Column 0"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
