<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModel ="clr-namespace:BelotScorer.ViewModels"
             x:DataType="viewModel:GameViewModel"
             x:Class="BelotScorer.Views.GamePage"
             Title="Игра"
             BackgroundImageSource="table_background.jpg">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False"/>
    </Shell.BackButtonBehavior>


    <ScrollView>
        <StackLayout>
            <StackLayout Margin="0,15" Orientation="Horizontal">
                <Label Text="{Binding Game.Team1Name}"
                       FontSize="Large" HorizontalOptions="CenterAndExpand"/>

                <Label FontSize="Large" Text="-"/>
                <Label  Text="{Binding Game.Team2Name}" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
            <ScrollView>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--<ListView Margin="60,25" Grid.Column="0" ItemsSource="{Binding PointsTeam1}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell TextColor="Black" Text="{Binding .}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView Margin="60,25" Grid.Column="1" ItemsSource="{Binding PointsTeam2}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell TextColor="Black" Text="{Binding .}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>-->
                    <CollectionView Margin="60,25" Grid.Column="0" ItemsSource="{Binding PointsTeam1}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Label Margin="0,6" FontSize="Medium" Text="{Binding .}"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <CollectionView Margin="60,25" Grid.Column="1" ItemsSource="{Binding PointsTeam2}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                    <Label Margin="0,6" FontSize="Medium" Text="{Binding .}"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </ScrollView>
            <VerticalStackLayout VerticalOptions="EndAndExpand">
                <StackLayout Background="#CD853F" Orientation="Horizontal">
                    <StackLayout HorizontalOptions="Center">
                        <Label FontSize="Large" Grid.Column="1">Точки за отбор 1</Label>
                        <Entry Keyboard="Numeric" FontSize="Medium" Grid.Column="1" Text="{Binding Team1PointsToAdd}" x:Name="entry1"
                       TextChanged="Entry_TeamName_Changed" TextColor="Black"
                       Placeholder="Точки за отбор ..." MaxLength="3"
                       PlaceholderColor="Black"/>
                    </StackLayout>
                    <StackLayout HorizontalOptions="EndAndExpand">
                        <Label FontSize="Large">Точки за отбор 2</Label>
                        <Entry Keyboard="Numeric" FontSize="Medium" Text="{Binding Team2PointsToAdd}" x:Name="entry2"
                       TextChanged="Entry_TeamName_Changed" TextColor="Black"
                       Placeholder="Точки за отбор ..." MaxLength="3"
                       PlaceholderColor="Black"/>
                    </StackLayout>
                </StackLayout>
                <Button  x:Name="btn_Create"
                    Margin="10" Padding="5" IsEnabled="False"
                    BackgroundColor="Grey" TextTransform="Uppercase"
                    Text="Въведи точки"
                    Clicked="Save_Points_Clicked"
                    Command="{Binding AddPointsToTeamsCommand}" />
            </VerticalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>